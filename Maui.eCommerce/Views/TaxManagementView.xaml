<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.eCommerce.Views.TaxManagementView"
             Title="TaxManagementView"
             NavigatedTo="ContentPage_NavigatedTo">

    <VerticalStackLayout>

 <Grid 
    Padding="20"
    ColumnSpacing="12"
    VerticalOptions="Center"
    HorizontalOptions="Center">
    
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <Label 
        Text="Current % Sales Tax:" 
        FontAttributes="Bold"
        FontSize="18"
        VerticalOptions="Center"
        HorizontalOptions="Start"
        Grid.Column="0" />

    <Label 
        Text="{Binding Taxed}" 
        FontSize="18"
        TextColor="Green"
        FontAttributes="Bold"
        VerticalOptions="Center"
        HorizontalOptions="End"
        Grid.Column="1" />
</Grid>


        <Label 
        Text="New Tax Amount:"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
        <Entry
        Text="{Binding Taxed}"  HorizontalOptions="Center" VerticalOptions="Center" 
        />
        <Button Text="Ok" Clicked="OkClicked"/>
        <Button Text="Go Back" Clicked="GoBackClicked"/>

    </VerticalStackLayout>
</ContentPage>